@model WebApplication4.ViewModels.CustomerOrderViewModel


<h2>Customer Information</h2>
<p><strong>ID:</strong> @Model.Customer.Id</p>
<p><strong>Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>
<p><strong>Email:</strong> @Model.Customer.Email</p>

<h3>Orders</h3>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>

